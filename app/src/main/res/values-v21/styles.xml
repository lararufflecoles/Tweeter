<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/color_toolbar_text</item>
    </style>

    <!--Toolbar-->
    <style name="Toolbar">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/color_toolbar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_toolbar_background</item>
        <item name="android:elevation">3dp</item>
    </style>

    <!--About Activity-->
    <style name="AboutText">
        <item name="android:textSize">@dimen/text_size_about_text</item>
        <item name="android:textColor">@color/color_about_text</item>
        <item name="android:textColorLink">@color/color_about_link_text</item>
    </style>

</resources>
