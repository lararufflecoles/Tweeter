<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tweet_background"
    android:orientation="vertical"
    tools:context="">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_image_url"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_image_url"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:textColor="@color/color_tweet_name"
                android:textSize="@dimen/text_size_tweet_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/screen_name_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/created_at"
                android:layout_toRightOf="@id/name"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="5dp"
                android:textColor="@color/color_tweet_screen_name_handle"
                android:textSize="@dimen/text_size_tweet_screen_name_handle" />

            <TextView
                android:id="@id/created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_tweet_created_at"
                android:textSize="@dimen/text_size_tweet_created_at" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:paddingRight="10dp"
                android:textColor="@color/color_tweet_text"
                android:textSize="@dimen/text_size_tweet_text" />

            <LinearLayout
                android:id="@+id/toggle_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tweet_reply"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_reply_blue_55acee"
                    android:paddingTop="5dp" />

                <ToggleButton
                    android:id="@+id/retweet"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/tweet_reply"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/toggle_button_retweet"
                    android:paddingTop="5dp"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/favorited"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/retweet"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/toggle_button_favorited"
                    android:paddingTop="5dp"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_tweet_created_at" />

</LinearLayout>