<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image_url"
        android:paddingRight="5dp"
        android:textColor="@color/color_tweet_name"
        android:textSize="@dimen/text_size_tweet_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screen_name_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name"
        android:textColor="@color/color_tweet_screen_name_handle"
        android:textSize="@dimen/text_size_tweet_screen_name_handle" />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/screen_name_handle"
        android:paddingLeft="2dp"
        android:textColor="@color/color_tweet_created_at"
        android:textSize="@dimen/text_size_tweet_created_at" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/color_tweet_text" />

</RelativeLayout>